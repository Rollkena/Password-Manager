<UserControl x:Class="Password_Manager.Controls.AccountListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Password_Manager.Controls"
             mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             d:DesignHeight="70" d:DesignWidth="600">
    <Grid>
        <Label Content="{Binding AccountName}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0"/>
        <Label Content="{Binding EmailAddress}"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,30,0,0"/>
        <Button Uid="2" Click = "ButtonsClicked" Content="   Copy&#xD;&#xA;Password" Width="80" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0"/>
        <Button Uid="1" Click = "ButtonsClicked" Content="Copy&#xA;Email" Width="80" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,100,0"/>
    </Grid>
</UserControl>
